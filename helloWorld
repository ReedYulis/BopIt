void setup() {
  // put your setup code here, to run once:
  pinMode(8, OUTPUT); //LED
  pinMode(7, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(9, INPUT); //button
}

void loop() {
  // put your main code here, to run repeatedly:
  while(!digitalRead(9)){
    digitalWrite(8, HIGH); // sets the digital pin 13 on
    delay(1000);            // waits for a second
    digitalWrite(8, LOW);  // sets the digital pin 13 off
    delay(1000); 
     digitalWrite(7, HIGH); // sets the digital pin 13 on
    delay(1000);            // waits for a second
    digitalWrite(7, LOW);  // sets the digital pin 13 off
    delay(1000); 
     digitalWrite(6, HIGH); // sets the digital pin 13 on
    delay(1000);            // waits for a second
    digitalWrite(6, LOW);  // sets the digital pin 13 off
    delay(1000);  
    }         
  
}
